---
import DonationCard from "../components/DonationCard.astro";
import Mainlayout from "../layouts/mainlayout.astro";
---

<Mainlayout>
  <!--====== Start Banner Section ======-->
  <section class="banner-section">
    <!--====== Hero Wrapper ======-->
    <div class="hero-wrapper-three">
      <div class="hero-waves">
        <img src="/assets/images/hero/bg-2.png" class="waves one" alt="" />
        <img src="/assets/images/hero/bg.png" class="waves two" alt="" />
      </div>
      <!--====== Hero Slider ======-->
      <div class="hero-slider-two">
        <!--====== Single Slider ======-->
        <div class="single-slider">
          <div
            class="image-layer bg_cover"
            style="background-image: url(/assets/images/home-slider-1.jpg);"
          >
          </div>
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-xl-10">
                <!--====== Hero Content ======-->
                <div class="hero-content text-center">
                  <h1 data-animation="fadeInDown" data-delay=".5s">
                    Give a Little. Change a Lot.
                  </h1>
                  <p data-animation="fadeInUp" data-delay=".6s">
                    Grow Humanity and Kindness
                  </p>  
                  <div
                    class="hero-button mb-30"
                    data-animation="fadeInDown"
                    data-delay=".7s"
                  >
                    <a href="about.html" class="main-btn golden-btn mb-10" style="background-color: #b09039;"
                      >Donate Now</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!--====== Single Slider ======-->
        <div class="single-slider">
          <div
            class="image-layer bg_cover"
            style="background-image: url(/assets/images/home-slider-2.png);"
          >
          </div>
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-xl-10">
                <!--====== Hero Content ======-->
                <div class="hero-content text-center">
                  <h1 data-animation="fadeInDown" data-delay=".5s">
                    Feed a Family
                  </h1>
                  <p data-animation="fadeInUp" data-delay=".6s">
                and Transform Lives
                  </p>
                  <div
                    class="hero-button mb-30"
                    data-animation="fadeInDown"
                    data-delay=".7s"
                  >
                    <a href="about.html" class="main-btn golden-btn mb-10" style="background-color: #b09039;"
                      >Donate Now</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!--====== Single Slider ======-->
   
      </div>
    </div>
  </section><!--====== End Banner Section ======-->
  <!--====== Start Features Section ======-->
  <section class="features-section pt-95">
    <div class="container">
      <div class="row align-items-xl-center">
        <div class="col-lg-6">
          <div class="section-title mb-55 wow fadeInLeft">
            <span class="sub-title"
              ><i class="flaticon-plant"></i>Ayitah Charity 
            </span>
            <h2>
              Ayitah Charity Foundation aims to provide aid, improve health care and transform lives in the poverty-stricken communities. 
            </h2>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="features-content-box mb-55 wow fadeInRight">
            <p>
              Every dollar you donate to our projects is so meaningful and is used in full to help provide a sustainable future for entire villages for generations to come.
            </p>
            <a href="/about" class="btn-link"
              >Learn More<i class="far fa-angle-double-right"></i></a
            >
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xl-3 col-md-6 col-sm-12">
          <div
            class="features-thumb-item-two mb-40 wow fadeInDown"
            data-wow-delay=".2s"
          >
            <div class="thumb" style="width:375px;">
              <img src="/assets/images/free-1.png" alt="Image" />
            </div>
            <div class="text">
              <div class="icon">
                <i class="flaticon-landscape-1"></i>
              </div>
              <h5 class="title">Free Food</h5>
              <p>Complimentary food from charitable organizations.</p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-md-6 col-sm-12">
          <div
            class="features-thumb-item-two mb-40 wow fadeInUp"
            data-wow-delay=".25s"
          >
            <div class="thumb">
              <img src="/assets/images/free-2.png" alt="Image" />
            </div>
            <div class="text">
              <div class="icon">
                <i class="flaticon-watering-can"></i>
              </div>
              <h5 class="title">Free Education</h5>
              <p>Education granted, charity's gift, knowledge shared.</p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-md-6 col-sm-12">
          <div
            class="features-thumb-item-two mb-40 wow fadeInDown"
            data-wow-delay=".3s"
          >
            <div class="thumb">
              <img src="/assets/images/free-3.png" alt="Image" />
            </div>
            <div class="text">
              <div class="icon">
                <i class="flaticon-lawnmower"></i>
              </div>
              <h5 class="title">Free Accommodation</h5>
              <p>Shelter offered through charitable generosity.</p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-md-6 col-sm-12">
          <div
            class="features-thumb-item-two mb-40 wow fadeInUp"
            data-wow-delay=".35s"
          >
            <div class="thumb">
              <img src="/assets/images/free-4.png" alt="Image" />
            </div>
            <div class="text">
              <div class="icon">
                <i class="flaticon-spider-plant"></i>
              </div>
              <h5 class="title">Free Books</h5>
              <p>Free books: Gift of Knowledge, Hope</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section><!--====== End Features Section ======-->
  <!--====== Start About Section ======-->
  <section class="about-bg-section">
    <!--====== About BG ======-->
    <div
      class="about-bg bg_cover wow fadeInLeft"
      style="background-image: url(/assets/images/about-1.png);"
    >
    </div>
    <div class="container">
      <div class="row align-items-center justify-content-end">
        <div class="col-lg-6">
          <!--====== About Content Box ======-->
          <div class="about-two_content-box pb-80 wow fadeInRight">
            <div class="section-title">
              <div class="section-title mb-50">
                <span class="sub-title"
                  ><i class="flaticon-plant"></i>ABOUT AYITAH CHARITY FOUNDATION</span
                >
                <h2>Ayitah is derived from the luganda word ayiita which means she/he is calling or to beckon someone.</h2>
              </div>
              <p class="mb-45">
                Ayitah Charity Foundation is a registered non-profit organization that was established in 2017 by Sophia Nyanzi and a group of friends. It was started as a channel for the founders and other interested parties to make positive impact in the lives of vulnerable groups like orphans, persons with disabilities, unemployed youth and women.
              </p>
              <div class="about-inner-content d-flex justify-content-between">
                <div class="inner-content">
                  <ul class="check-style-one mb-45">
                    <li>
                      <i class="far fa-check"></i>Orphan Welfare.
                    </li>
                    <li>
                      <i class="far fa-check"></i>Clean Water for All.
                    </li>
                    <li>
                      <i class="far fa-check"></i>Community Welfare
                    </li>
                  </ul>
                  <a href="/about" class="main-btn primary-btn"
                    >Learn More About Us</a
                  >
                </div>
                <div class="experience-box-two">
                  <h2 class="number"><span class="count">5</span>+</h2>
                  <h6>Years Of Experience</h6>
                  <a href="/about" class="icon-btn"
                    ><i class="far fa-arrow-right"></i></a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section><!--====== End About Section ======-->
  <!--====== Start Service Section ======-->
  <section class="service-bgc-section p-r z-1 main-bg pt-150 pb-70">
    <div class="shape shape-one">
      <span><img src="/assets/images/shape/leaf-1.png" alt="Leaf Png" /></span>
    </div>
    <div class="shape shape-two">
      <span><img src="/assets/images/shape/leaf-2.png" alt="Leaf Png" /></span>
    </div>
    <div class="shape shape-three">
      <span><img src="/assets/images/shape/leaf-3.png" alt="Leaf Png" /></span>
    </div>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-9 col-lg-12">
          <!--====== Section Title ======-->
          <div class="section-title text-white text-center wow fadeInDown">
            <span class="sub-title"
              ><i class="flaticon-plant"></i>Our Appeals</span
            >
          </div>
        </div>
      </div>
             
    
    </div>
    <DonationCard program={[]} />

  </section><!--====== End Service Section ======-->

